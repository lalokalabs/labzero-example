{
    "name": "Django Docker-in-Docker",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {},
      "node": {
        "version": "22"
      }
    },
    "extensions": [
      "ms-python.python",
      "ms-azuretools.vscode-docker"
    ],
    "postCreateCommand": "./.devcontainer/install_packages.sh && cp .env.example .env",
    "remoteEnv": {
      "ALLOWED_HOSTS": "*"
    },
    "runArgs": ["--add-host=host.docker.internal:host-gateway"]
}
